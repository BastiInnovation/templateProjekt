<mvc:View
	controllerName="ifm.bs.template.templateproject.controller.App"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:mvc="sap.ui.core.mvc">

	<App id="app">
	<Page id="page">
		<content> 

			<Table>
				<columns>
					<TableColumn>
						<Label text = "Platz "/>
					</TableColumn>
					<TableColumn>
						<Label text = "Verein "/>
					</TableColumn>
					<TableColumn>
						<Label text = "Spiele "/>
					</TableColumn>
					<TableColumn>
						<Label text = "Differenz "/>
					</TableColumn>
					<TableColumn>
						<Label text = "Punkte"/>
					</TableColumn>
				</columns>
				<rows>
					<TableRow>
						<cells>
							<TableCell>
								<content>
									<Label text = "BVB"/>
								</content>
							</TableCell>
						</cells>
					</TableRow>
				</rows>
			</Table>







			<List
				headerText="Verein"
				items="{bundesligaPlacing>/}"> 
					<items>
				<StandardListItem
				
				

				title="{bundesligaPlacing>teamName}"
				/>
					</items>
				
				<ObjectListItem
					title = "{bundesligaPlacing>teamName}">
					<firstStatus>
						<ObjectStatus text="{
                        	    path: 'bundesligaPlacing>points',
                            	formatter : '.formatter.points'
                            	}"
								
						/>
								
					</firstStatus>

				</ObjectListItem>
			</List>
			
		</content>
	</Page>
	</App>

</mvc:View>